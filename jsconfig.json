{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        // Object.fromEntries
        "lib": ["dom", "es2017", "es2019.object"],
        "declaration": true,
        "isolatedModules": true,
        "strict": true,
        /* Additional Checks */
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        /* Module Resolution Options */
        "moduleResolution": "node"
    },
    "exclude": [".yarn/releases/*", "**/__tests__/**/*", "**/__mocks__/**/*", "**/build/**/*"]
}
